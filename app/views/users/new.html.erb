
<div class="limiter">
		<div class="container-login100" style="background-image: url('images/bg-01.jpg');">
			<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
				
					<span class="login100-form-title p-b-49">
						Register
					</span>
          <div class="form-group">
            <div class="col-md-6 col-md-offset-3">
              <%= form_for(@user) do |f| %>
                <%= f.label :fullname %>
                <p><%= f.text_field :fullname, placeholder: "fullname", class: "form-control" %></p>
              
                <%= f.label :email %>
                <p><%= f.email_field :email, placeholder: "example@email.com", class: "form-control"  %></p>
                
                <%= f.label :password %>
                <p><%= f.password_field :password, placeholder: "password", class: "form-control" %></p>
                
                <%= f.label :admin, "I Am A Company Owner" %>
                <%= f.check_box :admin %><br><br>

                <%= f.submit "Create my account", class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
       
	    </div>
		</div>
	</div>
	


