<!DOCTYPE html>
<html>
  <head>
    <title>StockAndShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="<%= root_url %>"/>Home</a>
          </div>
          <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <% unless logged_in? %>
               <li><%= link_to "Sign Up", new_user_path %></li>
               <li><%= link_to "Sign In", signin_path %></li>
            <% else %>

               <li><%= link_to 'All Products', categories_path, class: "navbar-brand" %></li>
               <% if current_user.admin %>
                  <li><%= link_to "Stock Report", stock_report_path() , class: "navbar-brand"%></li>
              <% end %>
               <li><%= link_to "#{current_user.fullname} "+"Log Out", logout_session_path, method: :delete, class: "navbar-brand" %></li>
               
            <% end %>
          </ul>
        </div>

        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">

          </ul>
        </div>
        <!--/.nav-collapse -->

      </div>
    </div>
    
    <!-- content -->
    <div class="container"  role="main">
      <%= yield %>
    </div>
  </body>
</html>
